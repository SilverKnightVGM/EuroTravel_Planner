<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eurotravel.prog2.eurotravelplanner" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.eurotravel.prog2.eurotravelplanner.FacebookInit"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"
            />

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="userPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.Destinos"
            android:label="@string/title_activity_destinos"
            android:screenOrientation="userPortrait">
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.Opciones"
            android:label="@string/title_activity_opciones" >
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.subdiviciones_opciones"
            android:label="@string/title_activity_subdiviciones_opciones" >
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.DatosGenerales"
            android:label="@string/title_activity_datosGenerales" >
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.CalculadoraPopUp"
            android:label="@string/title_activity_calculadora"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme.CustomTheme" >
        </activity>

        <activity
            android:name="com.eurotravel.prog2.eurotravelplanner.gallery"
            android:label="@string/title_activity_gallery"
            android:screenOrientation="userPortrait">
        </activity>

        <activity
            android:name="com.facebook.FacebookActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="userPortrait"
            android:label="@string/app_name" />

    </application>

</manifest>
